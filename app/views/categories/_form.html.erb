<%= form_with(model: category, local: true) do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :category_name %>
    <%= form.text_field :category_name, id: :category_category_name %>
  </div>

  <div class="field">
    <%= form.label :summary %>
    <%= form.text_field :summary, id: :category_summary %>
  </div>

  <div class="field">
    <%= form.label :response_text %>
    <%= form.text_field :response_text, id: :category_response_text %>
  </div>

  <div class="field">
    <%= form.label :assigned_to %>
    <%= form.collection_select :assigned_to, @users, :id, :name, :selected => @category.assigned_to, include_blank: true  %>
  </div>

  <div class="field">
    <%= form.label :category_status_type %>
    <%= form.collection_select :category_status_type_id, CategoryStatusType.all, :id, :status_text, :selected => @category.category_status_type_id, prompt: true  %>
  </div>

  <div class="field">
    <%= form.label :action_needed %>
    <%= form.text_field :action_needed, id: :category_action_needed %>
  </div>

  <div class="field">
    <%= form.label :order_in_list %>
    <%= form.number_field :order_in_list, id: :category_order_in_list %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
