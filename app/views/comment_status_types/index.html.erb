<h1>Comment Status Types</h1>

<table>
  <thead>
    <tr>
      <th>Status text</th>
      <th>Order in list</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comment_status_types.each do |comment_status_type| %>
      <tr>
        <td><%= comment_status_type.status_text %></td>
        <td><%= comment_status_type.order_in_list %></td>
        <td><%= link_to 'Show', comment_status_type %></td>
        <td><%= link_to 'Edit', edit_comment_status_type_path(comment_status_type) %></td>
        <td><%= link_to 'Destroy', comment_status_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

