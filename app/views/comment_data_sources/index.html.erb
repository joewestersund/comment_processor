<p id="notice"><%= notice %></p>

<h1>Comment Data Sources</h1>

<table>
  <thead>
    <tr>
      <th>Data source name</th>
      <th>String</th>
      <th>Description</th>
      <th>Comment download url</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comment_data_sources.each do |comment_data_source| %>
      <tr>
        <td><%= comment_data_source.data_source_name %></td>
        <td><%= comment_data_source.string %></td>
        <td><%= comment_data_source.description %></td>
        <td><%= comment_data_source.comment_download_url %></td>
        <td><%= comment_data_source.active %></td>
        <td><%= link_to 'Show', comment_data_source %></td>
        <td><%= link_to 'Edit', edit_comment_data_source_path(comment_data_source) %></td>
        <td><%= link_to 'Destroy', comment_data_source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

