<h1>Comments</h1>

<%= link_to 'Import comments', comments_import_path %>

<table>
  <thead>
    <tr>
      <th>Source ID</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Organization</th>
      <th>State</th>
      <th>Comment text</th>
      <th>Attachment</th>
      <th>Summary</th>
      <th>Status type</th>
      <th>Action needed</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.source_id %></td>
        <td><%= comment.first_name %></td>
        <td><%= comment.last_name %></td>
        <td><%= comment.email.truncate(15) if comment.email.present? %></td>
        <td><%= comment.organization %></td>
        <td><%= comment.state %></td>
        <td><%= comment.comment_text.truncate(500) if comment.comment_text.present?%></td>
        <td><%= if comment.attachment_name.present? then link_to comment.attachment_name.to_s, comment.attachment_url end %></td>
        <td><%= comment.summary %></td>
        <td><%= comment.comment_status_type_id %></td>
        <td><%= comment.action_needed %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
      </tr>
    <% end %>
  </tbody>
</table>