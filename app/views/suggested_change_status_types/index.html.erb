<% content_for :title, 'Suggested Change Status Types' %>
<h1>Suggested Change Status Types</h1>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Status text</th>
      <th>Color</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @suggested_change_status_types.each_with_index do |suggested_change_status_type,index| %>
      <tr>
        <td><%= suggested_change_status_type.order_in_list %></td>
        <td><%= suggested_change_status_type.status_text %></td>
        <td class="<%= color_class(suggested_change_status_type)%>"><%= suggested_change_status_type.color_name %></td>
        <td><%= link_to 'Edit', edit_suggested_change_status_type_path(suggested_change_status_type) %></td>
        <td><%= link_to 'Delete', suggested_change_status_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= (link_to 'Move Up', "/suggested_change_status_types/#{suggested_change_status_type.id}/move_up", method: :post) unless index == 0 %></td>
        <td><%= (link_to 'Move Down', "/suggested_change_status_types/#{suggested_change_status_type.id}/move_down", method: :post) unless index == @suggested_change_status_types.count-1 %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Suggested Change Status Type', new_suggested_change_status_type_path %>
