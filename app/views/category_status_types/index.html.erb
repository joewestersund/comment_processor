
<h1>Category Status Types</h1>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Status text</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @category_status_types.each_with_index do |category_status_type,index| %>
      <tr>
        <td class="<%= status_css(category_status_type)%>" ><%= category_status_type.order_in_list %></td>
        <td><%= category_status_type.status_text %></td>
        <td><%= link_to 'Edit', edit_category_status_type_path(category_status_type) %></td>
        <td><%= link_to 'Delete', category_status_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= (link_to 'Move Up', "/category_status_types/#{category_status_type.id}/move_up", method: :post) unless index == 0 %></td>
        <td><%= (link_to 'Move Down', "/category_status_types/#{category_status_type.id}/move_down", method: :post) unless index == @category_status_types.count-1 %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

