<% content_for :title, 'Users' %>
<h1>Users</h1>

<div class="links">
  <% if current_user.admin_for?(current_rulemaking) %>
    <%= link_to 'New User', new_user_path %>
  <% end %>
</div>

<div class="filter-box">
  <button id="show_filter" class="filter-button">Show/Hide Filter</button>
  <div class="filter <%="hidden" unless @filtered %>">
    <%= form_tag request.path, method: 'get' do %>
      <div class="field">
        <%= label_tag :name  %>
        <%= text_field_tag :name, params[:name] %>
      </div>
      <div class="field">
        <%= label_tag :email  %>
        <%= text_field_tag :email, params[:email] %>
      </div>
      <div class="field">
        <%= label_tag :active  %>
        <%= check_box_tag :active, params[:active], params[:active] == "on" %>
      </div>
      <div class="field">
        <%= label_tag :application_admin  %>
        <%= check_box_tag :application_admin, params[:application_admin], params[:application_admin] == "on" %>
      </div>
      <div class="actions">
        <%= submit_tag "Search" %>
        <%= button_tag 'Clear Filter', {:type => 'reset', id: "clear_filter"} %>
      </div>
    <% end %>
  </div>
</div>

<%= will_paginate @users %>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Active</th>
    <th>Application Admin</th>
    <% if current_user.application_admin? %>
      <th>Reset Password Link</th>
      <th></th>
      <th></th>
    <% end %>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= mail_to user.email %></td>
      <td class="<%="#{highlight_true(user.active)}"%>"><%= show_boolean_value(user.active) %></td>
      <td class="<%="#{highlight_true(user.application_admin)}"%>"><%= show_boolean_value(user.application_admin) %></td>
      <% if current_user.application_admin? %>
        <td><%= "#{request.protocol}#{request.host_with_port}/password/reset/#{user.reset_password_token}" unless user.reset_password_token.nil? %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: "Are you sure you want to delete #{user.name}?" } %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate @users %>
