{
  "name": "comment_processor",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@hotwired/turbo-rails": "^8.0.13",
    "@popperjs/core": "^2.11.8",
    "autoprefixer": "^10.4.21",
    "bootstrap": "^5.3.5",
    "bootstrap-icons": "^1.11.3",
    "jquery": "^3.7.1",
    "jquery-ui": "^1.14.1",
    "nodemon": "^3.1.9",
    "npx": "^10.2.2",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "sass": "^1.86.3",
    "tom-select": "^2.4.3",
    "trix": "^2.1.13"
  },
  "engines": {
    "node": "22.14.0",
    "yarn": "1.22.22"
  },
  "scripts": {
    "build:css:compile": "sass ./app/assets/stylesheets/application.bootstrap.scss --no-source-map --load-path=node_modules",
    "build:css:prefix": "postcss ./app/assets/builds/application.css --use=autoprefixer --output=./app/assets/builds/application.css",
    "build:css": "yarn build:css:compile && yarn build:css:prefix",
    "watch:css": "nodemon --watch ./app/assets/stylesheets/ --ext scss --exec \"yarn build:css\"",
    "build": "esbuild app/assets/javascripts/application.js --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets"
  },
  "browserslist": [
    "defaults"
  ],
  "devDependencies": {
    "esbuild": "^0.25.2"
  }
}
